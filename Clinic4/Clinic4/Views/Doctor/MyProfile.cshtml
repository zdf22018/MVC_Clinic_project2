
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Clinic4.Models.doctor

@{
    ViewBag.Title = "MyProfile";
    string docId = Session["DoctorId"].ToString();
}

<h2 class="display-4">My profile</h2>
<table class="table">
    <tr>
        <th>Doctor Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Speciality</th>
        <td>@Model.Speciality</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>User Name</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Login Password</th>
        <td>@Model.LoginPassWord</td>
    </tr>
    <tr>
        <td colspan="2">@Html.ActionLink("Edit", "EditDoctor", new {id=docId })</td>
    </tr>

</table>



@{
    ViewBag.Title = "Doctor";
}
@{
    string ID = null;

    if (Session["DoctorId"] != null)
    {
        ID = Session["DoctorId"].ToString();
        
    }
}
    

@if (ID != null)
{
    <h2>Doctor ID: @ID</h2>
    <ul>
        <li>@Html.ActionLink("View Patients", "getAllPatients", "Doctor")</li>
        <li>@Html.ActionLink("My Profile", "MyProfile", "Doctor", new { id = ID }, null)</li>
        <li>@Html.ActionLink("My Schedule", "getDoctorSchedule", "Doctor", new { id = ID }, null)</li>
        <li>@Html.ActionLink("Manage Availabilities ", "GetAvailabilities", "Doctor", new { id = ID }, null)</li>
    </ul>
}

else
{
    <h2>Please Login to access this page</h2>

    @Html.ActionLink("Log In", "Authenticate", "Login", null, new { @class = "btn btn-info mr-2" })
    @* @Html.ActionLink("Register", "Register", "Login", null, new { @class = "btn btn-info" }) *@
}

